<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AgregarMedicamentosActivity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="42dp"
        android:fontFamily="@font/afacad"
        android:text="Tipo de medicamento"
        android:textColor="@color/grisOsc"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/sp_tipo_medicamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_medicamento" />

    <Spinner
        android:id="@+id/sp_tipo_medicamento"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="56dp"
        android:background="@android:color/background_light"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_medicamento" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/afacad"
        android:text="Añadir medicación"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nombre_medicamento"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittext"
        android:hint="Nombre del medicamento"
        android:padding="12dp"
        android:singleLine="false"
        android:textColorHint="@color/gris"
        android:textColor="@color/grisOsc"
        android:fontFamily="@font/afacad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="85dp"
        android:text="Frecuencia"
        android:textColor="@color/grisOsc"
        android:fontFamily="@font/afacad"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/sp_cadaQueHoras"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Spinner
        android:id="@+id/sp_cadaQueHoras"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_porDiasTomar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/afacad"
        android:text="¿Por cuanto tiempo?"
        android:textColor="@color/grisOsc"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/sp_porDiasTomar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFechaInicio" />

    <Spinner
        android:id="@+id/sp_porDiasTomar"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/etFechaInicio" />

    <EditText
        android:id="@+id/etFechaInicio"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/calendar_regular"
        android:drawablePadding="8dp"
        android:fontFamily="@font/afacad"
        android:hint="Fecha de inicio"
        android:inputType="date"
        android:paddingStart="16dp"
        android:textColor="@color/grisOsc"
        android:textColorHint="@color/gris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_tipo_medicamento" />

    <Button
        android:id="@+id/buttonRegistrarMedicamentos"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/boton_color"
        android:backgroundTint="#FFFCFC"
        android:fontFamily="@font/afacad"
        android:text="Añadir"
        android:textColor="#020202"
        android:textSize="20sp"
        app:backgroundTint="@color/azulF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_cadaQueHoras" />

    <ListView
        android:id="@+id/listViewMedicamentos"
        android:layout_width="391dp"
        android:layout_height="280dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegistrarMedicamentos" />

</androidx.constraintlayout.widget.ConstraintLayout>
